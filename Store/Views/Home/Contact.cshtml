
@using Store.Models

@model ContactViewModel
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm())
{
    @Html.EditorFor(m => m.ConcreteMark)
    <br>
    <input type="submit" value="Get countries Qty" />
}
<br />

@if (Model != null)
{
<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>ProducersIds</td>
        </tr>
    </thead>
    @foreach (var item in Model.Countries)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.ProducersId.Select(id=>id.ToString()).Aggregate("",(prev,next)=>prev + " "+ next)</td>
    </tr>
    }
</table>
   


}

<p>Use this area to provide additional information.</p>